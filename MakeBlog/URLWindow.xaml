<Window x:Class="MakeBlog.URLWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MakeBlog"
        mc:Ignorable="d"
        Title="URLWindow" Height="150" Width="400 ">
    <Grid>
        <Label Content="タイトル" HorizontalAlignment="Left" Margin="10,23,0,0" VerticalAlignment="Top"/>
        <Label Content="URL" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="URL_Check" Content="タイトルをURLにする" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Checked="URL_Check_Checked"/>
        <TextBox x:Name="URL_Title" HorizontalAlignment="Left" Margin="61,27,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <TextBox x:Name="URL_URL" HorizontalAlignment="Left" Margin="61,53,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <Button x:Name="URL_Out" Content="出力" HorizontalAlignment="Left" Margin="306,85,0,0" VerticalAlignment="Top" Width="43" Click="URL_Out_Click"/>

    </Grid>
</Window>
